<!DOCTYPE html>
<html>
<head>
  <title>RockPaperScissors</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.css">
</head>
<body>
  <p>You played <%= @user_move %>!</p>

  <p>The computer played <%= @computer_move %>!</p>

  <p>You <%= @result %>!</p>
<%= yield %>

<div class="container">
  <hr>

  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-xs-12">
      <div class="btn-group btn-group-justified">
        <a href="/rock" class="btn btn-block btn-primary">
          Play Rock
        </a>

        <a href="/paper" class="btn btn-block btn-info">
          Play Paper
        </a>

        <a href="/scissors" class="btn btn-block btn-primary">
          Play Scissors
        </a>
      </div>
    </div>
  </div>

  <hr>

  <div class="row">
  <div class="col-md-4 col-md-offset-2 col-xs-6">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h2 class="panel-title text-center">
          <%= @user_move %>
        </h2>
      </div>
      <div class="panel-body">
        <% if @user_move == "rock" %>
          <img class="img-responsive" src="/assets/images/rock.png">
        <% elsif @user_move == "paper" %>
          <img class="img-responsive" src="/assets/images/paper.png">
        <% else  %>
          <img class="img-responsive" src="/assets/images/scissors.png">
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-4 col-xs-6">
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h2 class="panel-title text-center">
          <%= @computer_move %>
        </h2>
      </div>
      <div class="panel-body">
        <% if @computer_move == "rock" %>
          <img class="img-responsive" src="/assets/images/rock.png">
        <% elsif @computer_move == "paper" %>
          <img class="img-responsive" src="/assets/images/paper.png">
        <% else  %>
          <img class="img-responsive" src="/assets/images/scissors.png">
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="well text-center">
      <h1>

        <span class="label label-warning">
          <%= @result %>
        </span>
      </h1>
    </div>
  </div>
</div>


</body>
</html>
